  <script>
    // Principal building — minimum setback in feet (as provided)
    const SETBACKS = {
      "R-1": { label: "R-1", front: 20, side: 8, rear: 20 },
      "R-2": { label: "R-2", front: 20, side: 8, rear: 20 },
      "R-3": { label: "R-3", front: 20, side: 8, rear: 20 },
      "UV":  { label: "UV",  front: 10, side: 5, rear: 5  },
      "R-4": { label: "R-4", front: 5,  side: 5, rear: 5  }
    };

    const districtEl = document.getElementById("district");
    const lotNoteEl  = document.getElementById("lotNote");
    const tbodyEl    = document.getElementById("tbody");
    const footnoteEl = document.getElementById("footnote");
    const copyLinkEl = document.getElementById("copyLink");

    function fmt(n){ return `${n} ft <span class="unit">(min)</span>`; }

    function render(){
      const key = districtEl.value;
      const d = SETBACKS[key];

      tbodyEl.innerHTML = `
        <tr><td>Front</td><td class="big">${fmt(d.front)}</td></tr>
        <tr><td>Side</td><td class="big">${fmt(d.side)}</td></tr>
        <tr><td>Rear</td><td class="big">${fmt(d.rear)}</td></tr>
      `;

      const noteType = lotNoteEl.value;
      let note = `<strong>Standard:</strong> Values shown are minimum principal building setbacks for the selected district.`;
      if(noteType === "secondary"){
        note = `<strong>Front setback note:</strong> Secondary yard is <strong>15 ft</strong>.`;
      }
      if(noteType === "culdesac"){
        note = `<strong>Front setback note:</strong> Cul-de-sac lots may reduce lot width at building line by <strong>25 ft</strong>.`;
      }

      footnoteEl.innerHTML = `
        <div>
          <div style="margin-bottom:6px;">
            <strong>Selected district:</strong> ${d.label}
          </div>
          <div>${note}</div>
        </div>
      `;
    }

    function init(){
      Object.keys(SETBACKS).forEach(k=>{
        const opt = document.createElement("option");
        opt.value = k;
        opt.textContent = SETBACKS[k].label;
        districtEl.appendChild(opt);
      });

      districtEl.value = "R-1";
      render();

      districtEl.addEventListener("change", render);
      lotNoteEl.addEventListener("change", render);

      copyLinkEl.addEventListener("click", async (e)=>{
        e.preventDefault();
        try{
          await navigator.clipboard.writeText(window.location.href);
          copyLinkEl.textContent = "Copied!";
          setTimeout(()=> copyLinkEl.textContent = "Copy this page link", 1200);
        }catch{
          alert("Copy failed — please copy the URL from the address bar.");
        }
      });
    }

    init();
  </script>
</body>
